<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AnimeDetails">

    <ImageView
        android:id="@+id/anime_details_image"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/anime_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/amaranth_bold"
        android:text="TextView"
        android:textColor="@color/Black"
        android:textSize="24sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anime_details_image" />

    <Button
        android:id="@+id/button_wish_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/amaranth_bold"
        android:text="@string/add_to_wish_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anime_details_name" />



    <TextView
        android:id="@+id/genres_anime_details"
        android:layout_width="match_parent"
        android:fontFamily="@font/amaranth_bold"
        android:layout_height="0dp"
        android:textColor="@color/SkyBlue"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_wish_list" />
    <TextView
            android:id="@+id/anime_details_synopsis"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:textSize="18sp"
            android:textIsSelectable="true"
            android:fontFamily="@font/amaranth_bold"
        android:layout_margin="32dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genres_anime_details" />



</androidx.constraintlayout.widget.ConstraintLayout>